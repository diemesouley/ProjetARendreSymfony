{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEnvoyeur</th>
                <th>PrenomEnvoyeur</th>
                <th>TelephoneEnvoyeur</th>
                <th>NCI</th>
                <th>NomRecepteur</th>
                <th>PrenomRecepteur</th>
                <th>TelephoneRecepteur</th>
                <th>NCIRecepteur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nomEnvoyeur }}</td>
                <td>{{ client.prenomEnvoyeur }}</td>
                <td>{{ client.telephoneEnvoyeur }}</td>
                <td>{{ client.nCI }}</td>
                <td>{{ client.nomRecepteur }}</td>
                <td>{{ client.prenomRecepteur }}</td>
                <td>{{ client.telephoneRecepteur }}</td>
                <td>{{ client.nCIRecepteur }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}
