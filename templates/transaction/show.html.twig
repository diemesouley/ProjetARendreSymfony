{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ transaction.montant }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ transaction.date ? transaction.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CommEtat</th>
                <td>{{ transaction.commEtat }}</td>
            </tr>
            <tr>
                <th>CommSys</th>
                <td>{{ transaction.commSys }}</td>
            </tr>
            <tr>
                <th>CommExp</th>
                <td>{{ transaction.commExp }}</td>
            </tr>
            <tr>
                <th>CommRecept</th>
                <td>{{ transaction.commRecept }}</td>
            </tr>
            <tr>
                <th>StatusTransaction</th>
                <td>{{ transaction.statusTransaction }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('transaction_index') }}">back to list</a>

    <a href="{{ path('transaction_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('transaction/_delete_form.html.twig') }}
{% endblock %}
